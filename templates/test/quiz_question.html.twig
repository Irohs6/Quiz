
{% extends 'base.html.twig' %}

{% block title %}Ajout des question et des réponses{% endblock %}

{% block body %}
<div class="container">

    <h2>Ajout des questions aux Quiz: {{ quiz.title }}</h2>
   
       
{# *******************ajout ou modification des question au quiz ********************************************************************#}
    

    {{ form_start(formQuiz)}}
           
            <h2>Ajout des question:</h2>
            <div class="form-group row ">
                <div class="col-form-label col-sm-2">&nbsp;</div>
                <div id="question-fields-list" class="col-sm-10 remove-collection-widget"
                data-prototype="{{ form_widget(formQuiz.questions.vars.prototype)|e }}"
                data-quiz="{{quizId}}"
                data-widget-tags="{{ '<p></p>'|e }}"
                data-widget-counter="{{ formQuiz.questions|length }}">
                {# {{ dump(form_widget(formQuiz.questions.vars.prototype.children.answers.vars.prototype)) }} #}
                    {% for questionField in formQuiz.questions.vars.prototype.children.answers.vars.prototype %}
                        {# {{ dump(questionField) }} #}
                        <p>
                            {# {{ form_widget(questionField)}} #}
                            {{ form_errors(questionField) }}
                            {# {{ form_widget(questionField, {'attr': {'class': 'borders'}}) }} #}
                        </p>
                       


                    {% endfor %}
                   
                </div>
            </div>
            <div class="form-group row flex-action">
                <button type="button" 
                    class="add-another-collection-widget button"
                    data-list-selector="#question-fields-list">Ajouter une question</button>
            </div>
            {# empêche l'apparition d'une légende "programmes", si la collection est vide (en cas de création d'une nouvelle session) #}
            {% do formQuiz.questions.setRendered %}
    {{ form_end(formQuiz) }}
</div>
{% endblock %}
