{% extends 'base.html.twig' %}

{% block title %}Liste des Categories!{% endblock %}

{% block body %}
<div class="box_theme">
    {{ include ('admin/panel_admin_nav.html.twig') }}
    <table class="admin-theme">
        <thead>
            <tr>
                <td>ID</td>
                <td>Nom</td>
                <td>Theme</td>
                <td>Nombre de Quiz</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
           
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category }}</td>
                    <td>{{ category.theme }}</td>
                    <td>{{ category.quizzes|length}}</td>
                    <td>
                        <ul class="ul_action">
                            <li class="li_action">
                                <a  href="{{path('new_quiz', {'idCategory': category.id})}}">Cr√©er un Quiz</a>
                            </li>
                            <li class="li_action">
                                <a class="modify" href="{{path('edit_category', {'id': category.id})}}">Modifier un categorie</a>
                            </li>
                            <li class="li_action">
                                <a class="modify" href="{{path('delete_category', {'id': category.id})}}">Supprimer un categorie</a> 
                            </li>
                        </ul>
                    </td>
                    
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
